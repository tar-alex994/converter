<div>
    Браковать с: <%= @product.date_of_rejection %>
</div>

<div>
    PLU: <%= @product.plu %>
</div>

<div>
    Количество: <%= @product.quantity %> <%= @product.type_of_quantity %>
</div>

<div>
    <% @product.photos.each do |photo| %>
        <div><%= image_tag photo %></div>
    <% end %>
</div>

<div>
    <%= button_to "Удалить", product_path(@product), method: :delete, 
                  onclick: "return confirm('Точно удалить?')" %>
</div>

<div>
    <%= button_to "Весь список", products_path, method: :get %>
</div>